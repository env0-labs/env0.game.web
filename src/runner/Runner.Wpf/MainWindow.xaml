<Window x:Class="Env0.Runner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="env0 runner"
        Width="980"
        Height="720"
        Background="#050A05">
    <Grid>
        <RichTextBox x:Name="TranscriptBox"
                     Margin="8"
                     FontFamily="Consolas"
                     FontSize="14"
                     IsReadOnly="True"
                     IsReadOnlyCaretVisible="True"
                     Background="#050A05"
                     Foreground="#7CFF7C"
                     BorderBrush="#1C3A1C"
                     CaretBrush="#7CFF7C"
                     SelectionBrush="#2B5A2B"
                     SelectionTextBrush="#7CFF7C"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     PreviewKeyDown="OnTranscriptPreviewKeyDown"
                     TextInput="OnTranscriptTextInput"
                     PreviewMouseDown="OnTranscriptPreviewMouseDown"
                     SelectionChanged="OnTranscriptSelectionChanged" />
    </Grid>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Runner.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="Runner.Avalonia.MainWindow"
        WindowState="Maximized"
        Background="#000000"
        Title="env0">

  <Grid Background="#000000">

    <!-- 4:3 CRT area anchored top-left inside a widescreen window -->
    <Border HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="24"
            Width="960" Height="720"
            CornerRadius="18"
            BorderThickness="2"
            BorderBrush="#1f6b45"
            Background="#050607"
            ClipToBounds="True">
      <local:CrtTerminalControl x:Name="Terminal" Focusable="True" />
    </Border>

    <!-- Hidden input sink (kept as a fallback focus target). -->
    <TextBox x:Name="InputSink" Opacity="0" Width="1" Height="1" BorderThickness="0"
             Focusable="True" IsTabStop="True"
             Background="#000000" Foreground="#000000" CaretBrush="#000000" />
  </Grid>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Runner.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="Runner.Avalonia.MainWindow"
        Title="env0 (Avalonia PoC)">

  <Grid Background="#050607">
    <local:CrtTerminalControl x:Name="Terminal" Focusable="True" />

    <!-- Hidden input sink (kept as a fallback focus target). -->
    <TextBox x:Name="InputSink" Opacity="0" Width="1" Height="1" BorderThickness="0"
             Focusable="True" IsTabStop="True"
             Background="#050607" Foreground="#050607" CaretBrush="#050607" />
  </Grid>
</Window>
